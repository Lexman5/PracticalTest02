<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input pentru prefix -->
    <EditText
        android:id="@+id/inputPrefix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introdu prefixul"
        android:inputType="text" />

    <!-- Buton pentru declanșarea funcționalității -->
    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Caută rezultate" />

    <!-- TextView pentru afișarea rezultatelor -->
    <TextView
        android:id="@+id/resultsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rezultatele vor apărea aici"
        android:textSize="16sp" />
</LinearLayout>
